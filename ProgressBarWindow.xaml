<Window x:Class="Common_Tasks.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Common_Tasks"
        mc:Ignorable="d"
        Title="ProgressBarWindow" Height="94" Width="713">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="27" Margin="0,39,0,0" VerticalAlignment="Top" Width="670"/>
        <TextBlock x:Name="progressText" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Reading Files ...." VerticalAlignment="Top" Width="670"/>
    </Grid>
</Window>
